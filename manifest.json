{
    "name": "Even Financial Helper",
    "version": "1.0",
    "description": "123",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs"
    ],
    "background": {
        "scripts": ["./scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["./scripts/jquery.js", "./scripts/checkoutListener.js" ]
        }
    ], 
    "browser_action":{
        "default_popup": "./pages/popup.html"
    },
    "manifest_version": 2
}