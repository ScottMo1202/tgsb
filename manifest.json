{
    "name": "Even Financial Helper",
    "version": "1.0",
    "description": "It's not an ad, for real.",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs"
    ],
    "background": {
        "scripts": ["./scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "./contentScripts/jquery.js", 
                "./contentScripts/utils.js",
                "./contentScripts/checkoutListener.js"
            ]
        }
    ], 
    "browser_action":{
        "default_popup": "./pages/popup.html"
    },
    "manifest_version": 2
}