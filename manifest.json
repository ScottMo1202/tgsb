{
    "name": "Even Financial Helper",
    "version": "1.0",
    "description": "123",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "./contentScripts/jquery.js", 
                "./contentScripts/utils.js",
                "./contentScripts/checkoutListener.js"
            ]
        }
    ], 
    "page_action":{
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}