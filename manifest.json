{
    "name": "Even Financial Helper",
    "version": "1.0",
    "description": "It's not an ad, for real.",
    "permissions": [
        "storage",
        "activeTab",
        "declarativeContent",
        "tabs"
    ],
    "background": {
        "scripts": [
            "./scripts/background.js",
            "./scripts/jquery.js",
            "./scripts/popper.min.js",
            "./scripts/bootstrap.min.js"
        ],
        "css": [
            "./styles/bootstrap.min.css"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "./scripts/jquery.js", 
                "./scripts/utils.js",
                "./scripts/checkoutListener.js"
            ]
        }
    ], 
    "browser_action":{
        "default_popup": "./pages/popup.html"
    },
    "manifest_version": 2
}